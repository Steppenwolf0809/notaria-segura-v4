{
  "name": "notaria-segura-backend",
  "version": "1.0.0",
  "description": "API Backend para Sistema Notaría Segura",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "test": "NODE_OPTIONS=--experimental-vm-modules jest --detectOpenHandles --forceExit",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "test:ci": "NODE_OPTIONS=--experimental-vm-modules jest --ci --coverage --watchAll=false",
    "prebuild": "npm run test:ci",
    "start": "npx prisma db push --accept-data-loss && node server.js",
    "build": "npx prisma generate",
    "start:prod": "npx prisma generate && (npx prisma migrate deploy || npx prisma db push --accept-data-loss) && node server.js",
    "start:railway": "npx prisma generate && npm run db:baseline && npx prisma migrate deploy --schema=./prisma/schema.prisma && node server.js",
    "dev": "nodemon server.js",
    "db:generate": "npx prisma generate",
    "db:migrate": "npx prisma migrate dev",
    "db:push": "npx prisma db push --accept-data-loss",
    "db:studio": "npx prisma studio",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:seed": "node prisma/seed.js",
    "populate-users": "node scripts/populate-users.js",
    "seed:users": "node scripts/seed-real-users.js",
    "setup:prod": "node scripts/setup-production-data.js",
    "verify:prod": "node scripts/verify-production.js",
    "verify:users": "node scripts/verify-users.js",
    "fix:enum": "node scripts/fix-agrupado-enum.js",
    "fix:grouped": "node scripts/fix-grouped-documents-status.js smart",
    "fix:grouped-force": "node scripts/fix-grouped-documents-status.js force EN_PROCESO",
    "db:sync": "npx prisma db push --accept-data-loss",
    "db:mark-baseline": "node scripts/mark-baseline-migration.js",
    "db:baseline": "node scripts/db-baseline.js",
    "prestart": "node scripts/run-migrations.js",
    "reconcile": "node scripts/reconcile-schema.js",
    "schema:inspect": "node scripts/inspect-schema.js",
    "qa:concuerdos": "node scripts/qa-concuerdos.js",
    "qa:gate": "node scripts/qa-gate.js"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "@prisma/client": "^5.7.0",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.0",
    "chokidar": "^3.6.0",
    "compression": "^1.8.1",
    "cors": "^2.8.0",
    "docx": "^8.5.0",
    "dotenv": "^16.3.0",
    "express": "^4.18.0",
    "express-rate-limit": "^8.0.1",
    "handlebars": "^4.7.8",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.0",
    "libphonenumber-js": "^1.12.10",
    "multer": "^1.4.5-lts.1",
    "pdf-parse": "^1.1.1",
    "pdfjs-dist": "^3.11.174",
    "pg": "^8.11.0",
    "postgres": "^3.4.4",
    "redis": "^5.8.2",
    "twilio": "^4.19.0",
    "xml2js": "^0.6.2",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "jest": "^30.1.1",
    "nodemon": "^3.0.0",
    "prisma": "^5.7.0",
    "sqlite3": "^5.1.7",
    "supertest": "^7.1.4"
  },
  "keywords": [
    "api",
    "notaria",
    "express",
    "postgresql"
  ],
  "author": "Notaría Segura",
  "license": "PRIVATE"
}
